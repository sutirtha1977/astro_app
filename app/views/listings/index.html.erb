<% @page_title = "All Listings" %>

<div class="row">
  <div class="col-lg-12">
      <h2 class="page-header text-warning">Listings for 
        <u><%= @product.name %></u>
        <small>( count: <%= @listings.count %> )</small>
      </h2>
  </div>
</div> <!-- /.col-lg-12 -->
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
          <%= link_to(new_listing_path(:product_id => @product.id), 
              remote: true,
              class: "btn btn-labeled btn-success") do %>
            <span class="btn-label">  
              <i class="fa fa-plus"></i>
            </span> Listing
          <% end %>
      </div> <!-- /.panel-heading -->
      <div class="panel-body">
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-listing">
          <thead>
              <tr>
                  <th class="text-center">Listing</th>
                  <th class="text-center">Original Price</th>
                  <th class="text-center">Current Price</th>
                  <th class="text-center"><i class="fa fa-wrench fa-lg"></i></th>
              </tr>
          </thead>
          <tbody class="listing-index">
          <%= render "index" %>
          </tbody>
        </table> <!-- /.table-responsive -->                
      </div> <!-- /.panel-body -->           
    </div> <!-- /.panel -->        
  </div> <!-- /.col-lg-12 -->    
</div> <!-- /.row -->
<div id="listing-modal" class="modal fade"></div>
