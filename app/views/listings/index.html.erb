<% @page_title = "All Listings" %>

<div class="row">
  <div class="col-lg-12">
      <h2 class="page-header">Listings for {<%= @product.name %>}</h2>
  </div>
</div> <!-- /.col-lg-12 -->

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-green">
      <div class="panel-heading">
          <%= link_to 'Add Listing', 
              new_listing_path(:product_id => @product.id), 
              "data-toggle": "tooltip", "data-placement": "right", :title => "Add Listing",
              remote: true,
              class: "btn btn-square-toround btn-bordered-warning btn-md" %>
      </div> <!-- /.panel-heading -->
      <div class="panel-body listing-index">
        <%= render "index" %>             
      </div> <!-- /.panel-body -->           
    </div> <!-- /.panel -->        
  </div> <!-- /.col-lg-12 -->    
</div> <!-- /.row -->
<div id="listing-modal" class="modal fade"></div>