<% @page_title = "Delete Listing" %>

<%= form_for(@listing, :url => listing_path(@listing, :product_id => @product.id), :method => 'delete') do |f| %>
	<div class="row">
	    <div class="col-lg-12">
	        <h2 class="page-header">Are you sure you want to permanently delete <%= f.object.name %> ?</h2>
	    </div>
	</div> <!-- /.col-lg-12 -->
	<div class="row">
	  <div class="col-lg-12">
		<%= link_to 'Cancel', listings_path(:product_id => @product.id), class: "btn btn-default" %>
		<%= f.submit("Delete", :class => 'btn btn-danger') %>
	  </div>
	</div> <!-- /.col-lg-12 -->
<% end %>