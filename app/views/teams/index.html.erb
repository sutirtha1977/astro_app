<% @page_title = "Team Members" %>

<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">Team Members</h2>
    </div>
</div> <!-- /.col-lg-12 -->

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-red">
      <div class="panel-heading">
          <%= link_to 'Add Team Member', 
              new_team_path, 
              remote: true,
              "data-toggle": "tooltip", "data-placement": "right", :title => "Add Member",
              class: "btn btn-square-toround btn-bordered-warning btn-md" %>
      </div> <!-- /.panel-heading -->
      <div class="panel-body">
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-team">
          <thead>
              <tr>
                  <th>First Name</th>
                  <th>Last Name</th>
                  <th>Email</th>
                  <th class="text-center">Actions</th>
              </tr>
          </thead>
          <tbody class="team-index">
          <%= render "index" %>
          </tbody>
        </table> <!-- /.table-responsive -->                
      </div> <!-- /.panel-body -->           
    </div> <!-- /.panel -->        
  </div> <!-- /.col-lg-12 -->    
</div> <!-- /.row -->
<div id="team-modal" class="modal fade"></div>