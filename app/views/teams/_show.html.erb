<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      <h3><%= @team.name %></h3>
    </div>
    <div class="modal-body">
      <div class="panel panel-default">
          <div class="panel-heading">
              <%= @team.email %>
          </div> <!-- /.panel-heading -->      
          <div class="panel-body">
              <!-- Nav tabs -->
              <ul class="nav nav-pills">
                  <li class="active"><a href="#desc-pills" data-toggle="tab">Description</a>
                  </li>
                  <li><a href="#add-pills" data-toggle="tab">Address</a>
                  </li>
                  <li><a href="#ph-pills" data-toggle="tab">Phone</a>
                  </li>
                  <li><a href="#oth-pills" data-toggle="tab">Others</a>
                  </li>
              </ul>
              <!-- Tab panes -->
              <div class="tab-content">
                  <div class="tab-pane fade in active" id="desc-pills">
                    <div class="well">
                      <p><%= @team.description %></p>
                    </div>
                  </div>
                  <div class="tab-pane fade" id="add-pills">
                    <div class="well">
                      <p><%= @team.address1 %></p>
                      <p><%= @team.address2 %></p>
                      <p><%= @team.city %></p>
                      <p><%= @team.state %></p>
                      <p><%= @team.country %></p>
                      <p><%= @team.zip %></p>
                    </div>
                  </div>
                  <div class="tab-pane fade" id="ph-pills">
                    <div class="well">
                      <p><%= @team.cell_phone %></p>
                      <p><%= @team.home_phone %></p>
                    </div>
                  </div>
                  <div class="tab-pane fade" id="oth-pills">
                    <div class="well">
                      <strong>Under Construction</strong>
                    </div>
                  </div>
              </div>
          </div>
          <!-- /.panel-body -->
      </div>
    </div>
    <div class="modal-footer">
      <%= link_to "Cancel", "#", class: "btn btn-bordered-success", data: {dismiss: "modal"} %>
    </div>
  </div>
</div>