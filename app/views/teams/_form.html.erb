<%= form_for @team, remote: true, html: { style: "display:inline;" } do |f| %>
<div class="modal-body">
	<ul class="errors"></ul>
	<div class="form-group">
		<%= f.label :first_name, class:"control-label" %>
		<%= f.text_field(:first_name, class: 'form-control', placeholder: 'Enter First Name ...') %>
	</div>
	<div class="form-group">
		<%= f.label :last_name, class:"control-label" %>
		<%= f.text_field(:last_name, class: 'form-control', placeholder: 'Enter Last Name ...') %>
	</div>
	<div class="form-group">
	    <%= f.label :email, class:"control-label" %>
	    <%= f.email_field(:email, class: 'form-control', placeholder: 'Email') %>
	</div>
	<div class="form-group">
	    <%= f.label :description, class:"control-label" %>
	    <%= f.text_area(:description, class: 'form-control', rows:'6') %>
	</div>
	<div class="form-group">
		<%= f.label "address 1", class:"control-label" %>
		<%= f.text_field(:address1, class: 'form-control', placeholder: 'Address Line 1 ...') %>
	</div>	
	<div class="form-group">
		<%= f.label "address 2", class:"control-label" %>
		<%= f.text_field(:address2, class: 'form-control', placeholder: 'Address Line 2 ...') %>
	</div>	
	<div class="form-group">
		<%= f.label :city, class:"control-label" %>
		<%= f.text_field(:city, class: 'form-control', placeholder: 'Enter City ...') %>
	</div>	
	<div class="form-group">
		<%= f.label :state, class:"control-label" %>
		<%= f.text_field(:state, class: 'form-control', placeholder: 'Enter State ...') %>
	</div>
	<div class="form-group">
		<%= f.label :country, class:"control-label" %>
		<%= f.text_field(:country, class: 'form-control', placeholder: 'Enter Country ...') %>
	</div>	
	<div class="form-group">
		<%= f.label :zip, class:"control-label" %>
		<%= f.number_field(:zip, class: 'form-control', placeholder: 'Enter Zip ...') %>
	</div>	
	<div class="form-group">
		<%= f.label :cell_phone, class:"control-label" %>
		<%= f.phone_field(:cell_phone, class: 'form-control', placeholder: 'Enter Cell Phone ...') %>
	</div>	
	<div class="form-group">
		<%= f.label :home_phone, class:"control-label" %>
		<%= f.phone_field(:home_phone, class: 'form-control', placeholder: 'Enter Home Phone ...') %>
	</div>	
</div>
<div class="modal-footer">
	<%= f.submit class: "btn btn-bordered-primary" %>
	<%= link_to "Cancel", "#", class: "btn btn-bordered-success", data: {dismiss: "modal"} %>
</div>
<% end %>


