<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h3>Delete Admin User</h3>
    </div>
    <div class="modal-body">
      <ul class="errors"></ul>
      Are you sure you wish to delete <b><%= @admin_user.name %></b>?
    </div>
    <div class="modal-footer">
      <%= link_to "Yes, Delete This Member", admin_user_path(@admin_user), method: :delete, remote: true, class: "btn btn-bordered-danger" %>
      <%= link_to "No, Please Don't", "#", class: "btn btn-bordered-success", data: { dismiss: "modal" } %>
    </div>
  </div>
</div>