<% @page_title = "Admin Users" %>

<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">Admin Users</h2>
    </div>
</div> <!-- /.col-lg-12 -->

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-blue">
      <div class="panel-heading">
          <%= link_to 'Add Admin User', 
              new_admin_user_path, 
              remote: true,
              class: "btn btn-square-toround btn-bordered-info btn-md" %>
      </div> <!-- /.panel-heading -->
      <div class="panel-body">
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-adminuser">
          <thead>
              <tr>
                  <th>Name</th>
                  <th>Email</th>
                  <th>UserName</th>
                  <th class="text-center">Actions</th>
              </tr>
          </thead>
          <tbody class="admin-index">
          <%= render "index" %>
          </tbody>
        </table> <!-- /.table-responsive -->                
      </div> <!-- /.panel-body -->           
    </div> <!-- /.panel -->        
  </div> <!-- /.col-lg-12 -->    
</div> <!-- /.row -->
<div id="admin-modal" class="modal fade"></div>

