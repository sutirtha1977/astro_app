<% @page_title = "Show All Admin Users" %>

<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">View All Admin Users</h2>
    </div>
</div> <!-- /.col-lg-12 -->

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
          <%= link_to 'Add Admin User', 
              new_admin_user_path, 
              class: "btn btn-square-toround btn-bordered-primary btn-md" %>
      </div> <!-- /.panel-heading -->
      <div class="panel-body">
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-adminuser">
          <thead>
              <tr>
                  <th>Name</th>
                  <th>Email</th>
                  <th>UserName</th>
                  <th class="text-center">Actions</th>
              </tr>
          </thead>
          <tbody>
            <% @admin_users.each do |admin_user| %>
            <tr>
                <td><%= admin_user.name %></td>
                <td><%= mail_to(admin_user.email) %></td>
                <td><%= admin_user.username %></td>
                <td class="text-center">
                  <% if(admin_user.id != session[:user_id]) %>
                    <%= link_to(edit_admin_user_path(admin_user), :class => "btn btn-success btn-circle") do %>
                        <i class="fa fa-edit fa-fw" aria-hidden="true"></i> 
                    <% end %>  
                    <%= link_to(delete_admin_user_path(admin_user), :class => "btn btn-danger btn-circle") do %>
                        <i class="fa fa-trash-o fa-fw" aria-hidden="true"></i> 
                    <% end %>  
                  <% end %>             
                </td>
            </tr>
            <% end %>
          </tbody>
        </table> <!-- /.table-responsive -->                
      </div> <!-- /.panel-body -->           
    </div> <!-- /.panel -->        
  </div> <!-- /.col-lg-12 -->    
</div> <!-- /.row -->