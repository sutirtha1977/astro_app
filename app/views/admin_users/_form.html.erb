<%= form_for @admin_user, remote: true, html: { style: "display:inline;" } do |f| %>
<div class="modal-body">
    <div class="form-group">
        <%= f.label :first_name, class:"control-label" %>
        <%= f.text_field(:first_name, class: 'form-control', placeholder: 'Enter First Name ...') %>
    </div>
    <div class="form-group">
        <%= f.label :last_name, class:"control-label" %>
        <%= f.text_field(:last_name, class: 'form-control', placeholder: 'Enter Last Name ...') %>
    </div> 
    <div class="form-group">
        <%= f.label :email, class:"control-label" %>
        <%= f.email_field(:email, class: 'form-control', placeholder: 'Email') %>
    </div>  
    <div class="form-group">
        <%= f.label :username, class:"control-label" %>
        <%= f.text_field(:username, class: 'form-control', placeholder: 'Enter User Name ...') %>
    </div>
    <div class="form-group">
        <%= f.label :password, class:"control-label" %>
        <%= f.password_field(:password, class: 'form-control', id: 'password', placeholder: 'Enter Password') %>
    </div>
</div>
<div class="modal-footer">
    <%= f.submit class: "btn btn-bordered-primary" %>
    <%= link_to "Cancel", "#", class: "btn btn-bordered-warning", data: {dismiss: "modal"} %>
</div>
<% end %>