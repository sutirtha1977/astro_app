<% @page_title = "Delete Category" %>

<%= form_for(@product, :method => 'delete') do |f| %>
	<div class="row">
	    <div class="col-lg-12">
	        <h2 class="page-header">Are you sure you want to permanently delete <%= f.object.name %> ?</h2>
	    </div>
	</div> <!-- /.col-lg-12 -->
	<div class="row">
	  <div class="col-lg-12">
		<%= link_to 'Cancel', products_path, class: "btn btn-default" %>
		<%= f.submit("Delete", :class => 'btn btn-danger') %>
	  </div>
	</div> <!-- /.col-lg-12 -->
<% end %>
