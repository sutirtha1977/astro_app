<% @page_title = "All Categories" %>

<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">All Categories</h2>
    </div>
</div> <!-- /.col-lg-12 -->


<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-green">
      <div class="panel-heading">
          <%= link_to(new_product_path, 
              remote: true,
              class: "btn btn-square-toround btn-bordered-warning btn-md") do %>
            <i class="fa fa-plus"></i> Category
          <% end %>
      </div> <!-- /.panel-heading -->
      <div class="panel-body">
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-product">
          <thead>
              <tr>
                  <th>Name</th>
                  <th>Category</th>
                  <th>Description</th>
                  <th class="text-center"><i class="fa fa-wrench fa-lg"></i></th>
                  <th class="text-center">Listings</th>
              </tr>
          </thead>
          <tbody class="product-index">
          <%= render "index" %>
          </tbody>
        </table> <!-- /.table-responsive -->                
      </div> <!-- /.panel-body -->           
    </div> <!-- /.panel -->        
  </div> <!-- /.col-lg-12 -->    
</div> <!-- /.row -->
<div id="product-modal" class="modal fade"></div>




