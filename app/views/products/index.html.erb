<% @page_title = "Show All Categories" %>

<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">View All Categories</h2>
    </div>
</div> <!-- /.col-lg-12 -->

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-green">
      <div class="panel-heading">
          <%= link_to 'Add Category', 
              new_product_path, 
              class: "btn btn-square-toround btn-bordered-primary btn-md" %>
      </div> <!-- /.panel-heading -->
      <div class="panel-body">
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-product">
          <thead>
              <tr>
                  <th>Name</th>
                  <th>Category</th>
                  <th>Description</th>
                  <th class="text-center">Actions</th>
                  <th class="text-center">Listings</th>
              </tr>
          </thead>
          <tbody>
            <% @products.each do |product| %>
            <tr>
                <td><%= product.name %></td>
                <td>
                  <%= product.category %>
                  <% if product.visible %>
                    <i class="fa fa-eye fa-fw" aria-hidden="true"></i>
                  <% else %>
                    <i class="fa fa-eye-slash fa-fw" aria-hidden="true"></i>
                  <% end %>
                </td>
                <td>
                  <%= truncate(product.description, :length => 30) %>                  
                  <%= link_to product_path(product) do %>
                      <i class="fa fa-flag fa-fw" aria-hidden="true"></i> 
                  <% end %>  
                </td>
                <td class="text-center">
                  <%= link_to(edit_product_path(product), :class => "btn btn-success btn-circle") do %>
                      <i class="fa fa-edit fa-fw" aria-hidden="true"></i> 
                  <% end %>  
                  <%= link_to(delete_product_path(product), :class => "btn btn-danger btn-circle") do %>
                      <i class="fa fa-trash-o fa-fw" aria-hidden="true"></i> 
                  <% end %>               
                </td>
                <td class="text-center">
                  <%= link_to(listings_path(:product_id => product.id), :class => "btn btn-primary btn-circle") do %>
                    <i class="fa fa-list fa-fw"></i>
                  <% end %>               
                </td>
            </tr>
            <% end %>
          </tbody>
        </table> <!-- /.table-responsive -->                
      </div> <!-- /.panel-body -->           
    </div> <!-- /.panel -->        
  </div> <!-- /.col-lg-12 -->    
</div> <!-- /.row -->

