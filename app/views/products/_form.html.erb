<%= error_messages_for(f.object) %>

<div class="form-group">
    <label for="productName">Product Name</label>
    <%= f.text_field(:name, class: 'form-control', id: 'productName', placeholder: 'Enter Product Name') %>
</div>

<div class="form-group">
    <label>Category</label>
    <%= f.radio_button(:category, 'Service', class: 'radio-inline') %> Service
    <%= f.radio_button(:category, 'Product', class: 'radio-inline') %> Product
</div>

<div class="form-group">
    <label for="productDesc">Description</label>
    <%= f.text_area(:description, class: 'form-control', id: 'content', rows:'6') %>
</div>

<div class="form-group">
    <label>Visible</label>
    <%= f.check_box(:visible, class: 'checkbox-inline') %>
</div>

<%= link_to 'Cancel', products_path, class: "btn btn-bordered-warning" %>
<%= f.submit("Submit", :class => 'btn btn-bordered-primary') %>  