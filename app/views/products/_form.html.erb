<%= form_for @product, remote: true, html: { style: "display:inline;" } do |f| %>
<div class="modal-body">
    <ul class="errors"></ul>
    <div class="form-group">
        <%= f.label "Category Name", class:"control-label" %>
        <%= f.text_field(:name, class: 'form-control', id: 'productName', placeholder: 'Enter Product Name') %>
    </div>

    <div class="form-group">
        <%= f.label "Type", class:"control-label" %>
        <%= f.radio_button(:category, 'Service', class: 'radio-inline') %> Service
        <%= f.radio_button(:category, 'Product', class: 'radio-inline') %> Product
    </div>

    <div class="form-group">
        <%= f.label :description, class:"control-label" %>
        <%= f.text_area(:description, class: 'form-control', id: 'content', rows:'6') %>
    </div>

    <div class="form-group">
        <%= f.label :visible, class:"control-label" %>
        <%= f.check_box(:visible, class: 'checkbox-inline') %>
    </div>
</div>
<div class="modal-footer">
	<%= f.submit "Submit",class: "btn btn-bordered-primary" %>
	<%= link_to "Cancel", "#", class: "btn btn-bordered-warning", data: {dismiss: "modal"} %>
</div>

<% end %>