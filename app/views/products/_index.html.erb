<% @products.each do |product| %>
<tr>
    <td>
        <%= product.name %>
        <% if product.visible %>
            <i class="fa fa-eye fa-fw" aria-hidden="true"></i>
        <% else %>
            <i class="fa fa-eye-slash fa-fw" aria-hidden="true"></i>
        <% end %>        
    </td>
     <td>
      <%= product.category %>
    </td>   
    <td>
      <%= truncate(product.description, :length => 30) %>
    </td>
    <td class="text-center">
        <%= link_to(product_path(product), :remote => true, :class => "btn btn-info btn-circle") do %>
            <i class="fa fa-flag fa-fw" aria-hidden="true"></i> 
        <% end %>  
        <%= link_to(edit_product_path(product), :remote => true, :class => "btn btn-success btn-circle") do %>
            <i class="fa fa-edit fa-fw" aria-hidden="true"></i> 
        <% end %>  
        <%= link_to(delete_product_path(product), :remote => true,:class => "btn btn-danger btn-circle") do %>
            <i class="fa fa-trash-o fa-fw" aria-hidden="true"></i> 
        <% end %>        
    </td>
    <td class="text-center">
        <%= link_to(listings_path(:product_id => product.id), :class => "btn btn-primary btn-circle") do %>
            <i class="fa fa-list fa-fw"></i>
        <% end %>          
    </td>
</tr>
<% end %>